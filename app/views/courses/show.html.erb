<h1>Assistances</h1>

<table class="demo">
  <thead>
    <tr>
      <th>Student</th>
      <th>rut</th>
      <% @dates.each do |date| %>
        <td><%= date.strftime('%m-%d') %></td>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @course.students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.rut %></td>
        <% @assistance.each do |assistance| %>
          <% if (assistance.student == student)%>
            <% if (assistance.attend )%>
              <td bgcolor="#88ff88"><%= assistance.attend %></td>
            <%else%>
              <td bgcolor="#ff8888"><%= assistance.attend %></td>
            <%end%>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

