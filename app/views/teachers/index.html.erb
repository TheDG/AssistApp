<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-body">
      <h1>Teachers</h1>
      <table class="table table-hover center">
        <thead>
        <tr>
          <th>Name</th>
          <th>Last name</th>
          <th>RUT</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @teachers.each do |teacher|%>
            <tr>
              <td><%= teacher.name %></td>
              <td><%= teacher.last_name %></td>
              <td><%= teacher.rut %></td>
              <td><%= teacher.email %></td>
              <td><%= link_to 'Show', teacher %></td>
              <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
              <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to 'New Teacher', new_teacher_path, class:'btn btn-deep-blue big-white' %>
    <div style="margin-left: 20px;">
      <h1>Import teachers csv file</h1>
      <%= form_tag import_teachers_path, multipart:true do %>
          <%=file_field_tag :file%>
          <%=submit_tag "Import CSV", class:'btn-success'%>
      <% end %>
    </div>
    <div  style="margin-left: 20px;">
      <h1>Export teachers csv file</h1>
      <%= button_to "Export Teacher CSV", "teachers.csv", method: :get, class:'btn-success'%>
    </div>
  </div>
</div>
<br>
