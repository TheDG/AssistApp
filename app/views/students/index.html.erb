<p id="notice"><%= notice %></p>

<div class="col-md-2">

</div>
<div class="col-md-2">

</div>
<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-body">
      <h1>Students</h1>
      <%= link_to 'New Student', new_student_path %>
      <table class="table table-hover">
        <thead>
        <tr>
          <th width='15%'>Name</th>
          <th width='15%'>Last name</th>
          <th width='30%'>RUT</th>
          <th colspan="3"></th>
          <th width='30%'></th>
        </tr>
        </thead>

        <tbody>
        <% @students.each do |student| %>
            <tr>
              <td><%= student.name %></td>
              <td><%= student.last_name %></td>
              <td><%= student.rut %></td>
              <td><%= link_to 'Show', student %></td>
              <td><%= link_to 'Edit', edit_student_path(student) %></td>
              <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td ><%= link_to 'Generate QR', generate_qr_student_path(student.id), class:'blue_btn' %><td >

            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div>
      <h1>Import Students</h1>
      <%= form_tag import_students_path, multipart:true do %>
        <%=file_field_tag :file%>
        <%=submit_tag "Import CSV",class:'btn-success'%>
      <% end %>
    </div>
    <div>
      <h1>Export teachers csv file</h1>
      <%= button_to "Export Students CSV", "students.csv", method: :get, class:'btn-success' %>
    </div>
  </div>
</div>

<br>
